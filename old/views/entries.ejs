<!DOCTYPE html>
<html>

<head>
    <title>
        <%= title %>
    </title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
</head>

<body>
    <% include menu %>
        <% if(locals.page) {%>
            <span class="name"><%= locals.page.total %> </span>
            <% } %>
                <% entries.forEach(entry =>{ %>
                    <div class="entry">
                        <h3>
                            <%= entry.title %>
                        </h3>
                        <p>
                            <%= entry.body %>
                        </p>
                        <p>Posted by
                            <%= entry.username %>
                        </p>
                    </div>
                    <%   }) %>
</body>

</html>